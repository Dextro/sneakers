<VirtualHost *:42>
  DocumentRoot /home/vagrant/apps/default/public

  # Logging
  ErrorLog /home/vagrant/log/apache2/default/default_error.log
  CustomLog /home/vagrant/log/apache2/default/default_access.log combined

  DirectoryIndex index.html
  SetEnv RAILS_ENV production
  SetEnv RACK_ENV production

  <Directory /home/vagrant/apps/default/public>
    Options -Indexes
    AllowOverride All
    Allow from All
  </Directory>

</VirtualHost>
